{
  "compilerOptions": {
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictFunctionTypes": false,
    "target": "es6",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "types": ["@pyoner/svelte-types"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}